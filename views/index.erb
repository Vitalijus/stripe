<html>
 	<head>
    	<title><%= @title %></title>
    	<script src="//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    	<script src="/stripe_token.js"></script>
  	</head>
  	<body>
    	<form action="/charge" method="POST" id="payment-form">
	  		<span class="payment-errors"></span>

	  		<div class="form-row">
	    		<label>
	      			<span>Card Number</span>
	      			<input type="text" size="20" data-stripe="number" value="4242424242424242">
	    		</label>
	  		</div>

	  		<div class="form-row">
	    		<label>
	      			<span>Expiration (MM/YY)</span>
	      			<input type="text" size="2" data-stripe="exp_month" value="12">
	    		</label>
	    		<span> / </span>
	    		<input type="text" size="2" data-stripe="exp_year" value="17">
	  		</div>

	  		<div class="form-row">
	    		<label>
	      			<span>CVC</span>
	      			<input type="text" size="4" data-stripe="cvc" value="123">
	    		</label>
	  		</div>

  			<input type="submit" class="submit" value="Submit Payment">
		</form>

		<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
		<script type="text/javascript">
		  Stripe.setPublishableKey('pk_test_WxmqvoiqGGzZqwgACqm0Meen');
		</script>
  	</body>
</html>